// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
// To see all of Zed's default settings without changing your
{
  "ssh_connections": [
    {
      "host": "benjamin-ye-git4",
      "projects": [
        {
          "paths": ["/src"]
        }
      ]
    }
  ],
  "terminal": {
    "dock": "right"
  },
  "project_panel": {
    "hide_gitignore": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "icon_theme": "Catppuccin Macchiato",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_completions_on_input": true,
  "edit_predictions": {
    "mode": "eager"
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "base_keymap": "JetBrains",
  "telemetry": {
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 12.0,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Frapp√©",
    "dark": "Catppuccin Macchiato"
  },
  "autosave": "on_focus_change",
  "languages": {},
  "inlay_hints": {
    "enabled": true,
    "show_background": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "minimap": {
    "show": "auto",
    "thumb": "always"
  },
  "experimental.theme_overrides": {
    // "background.appearance": "transparent",
    // "background": "#1e1e2eee",
    // "editor.background": "#1e1e2e44",
    // "title_bar.background": "#11111bdd", // dd, since does not use background
    // "toolbar.background": "#1e1e2e44",
    // "tab_bar.background": "#1e1e2e44",
    // "terminal.background": "#1e1e2e44",
    // "editor.gutter.background": "#1e1e2e44",
    // "tab.inactive_background": "#0b0b1144",
    // "tab.active_background": "#1e1e2e44",
    // "panel.background": "#18182544",
    // "hint.background": "#18182544", // make this darker on purpose
    // "status_bar.background": "#11111bdd", // dd, since does not use background
    // "error.background": "#c14568dd",
    // existing color scheme:
    // red: "f38ba8"
    // yellow: "f9e2af"

    "syntax": {
      "type.builtin": {
        "color": "#f9e2af",
        "font_style": "normal"
      },
      "parameter": {
        "color": "#f38ba8"
      }
    }
  },
  "notification_panel": {
    "dock": "right"
  },
  "lsp": {
    "discord_presence": {}
  },
  "indent_guides": {
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware"
  }
}
